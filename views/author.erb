<% if @author != nil%>
  <h2><%= @author.first_name %> <%= @author.last_name %></h2>
<br>
<h3>Edit author:</h3>
  <form action="/authors/<%= @author.id %>" method="post">
    <input type="hidden" name="_method" value="patch">

    <label for ="first_name">Edit first name:</label>
    <input id="first_name" name="first_name" type="text" value="<%= @author.first_name %>" required>
    <br>
    <label for ="last_name">Edit last name:</label>
    <input id="last_name" name="last_name" type="text" value="<%= @author.last_name %>" required>
    <br>
    <button type="submit">Edit author!</button>
  </form>
<% else %>
  <p> This author does not exist.</p>
<% end %>
<br>
